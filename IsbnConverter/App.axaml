<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="IsbnConverter.App"
             xmlns:local="using:IsbnConverter"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
             
     <Application.Resources>
         <FontFamily x:Key="FontAwesome">avares://IsbnConverter/Assets/Fonts#Font Awesome 6 Free</FontFamily>
         <FontFamily x:Key="FontAwesomeSolid">avares://IsbnConverter/Assets/Fonts#Font Awesome 6 Free Solid</FontFamily>
     </Application.Resources>
     
     <Application.Styles>
         <FluentTheme/>
         <StyleInclude Source="Styles/Fluent2Styles.axaml"/>
     </Application.Styles>
             
</Application>